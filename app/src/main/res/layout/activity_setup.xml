<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Preferences"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginBottom="32dp"/>

        <!-- Question 1: Preferred Sign Mode -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preferred Sign Mode?"
            android:textSize="18sp"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgSignMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rbAsl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ASL (Animations)"
                android:textColor="?attr/colorOnSecondary"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbAlphabet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSecondary"
                android:text="Alphabet (Fingerspelling)"/>

            <RadioButton
                android:id="@+id/rbMixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSecondary"
                android:text="Mixed (ASL with Fingerspelling fallback)"/>
        </RadioGroup>

        <!-- Question 2: Text Captions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do you want text captions on signs?"
            android:textSize="18sp"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgCaptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rbCaptionsYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textColor="?attr/colorOnSecondary"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbCaptionsNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:textColor="?attr/colorOnSecondary"
                android:text="No"/>
        </RadioGroup>

        <!-- Question 3: Main Usage Purpose -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main usage purpose?"
            android:textSize="18sp"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgUsage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <RadioButton
                android:id="@+id/rbUsageLearning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learning ASL"
                android:textColor="?attr/colorOnSecondary"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbUsageCommunication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSecondary"
                android:text="Daily Communication"/>
        </RadioGroup>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveSetup"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Save and Continue"
            android:background="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16sp"/>

    </LinearLayout>
</ScrollView>