<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background_gradient"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1A237E"
        android:padding="20dp"
        android:elevation="12dp"
        android:gravity="center_vertical">

        <!-- App Logo -->
        <LinearLayout
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/circle_gradient_blue"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            android:elevation="6dp">

            <!-- Simple text instead of missing icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ‹"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- App Title and User Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAppTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EchoSign"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:letterSpacing="0.02" />

            <TextView
                android:id="@+id/tvWelcomeUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speech to Sign Language"
                android:textColor="#C5CAE9"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Logout Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_logout_border"
            android:textSize="12sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:elevation="2dp" />
    </LinearLayout>

    <!-- Main Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Recognized Text Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <!-- Simple text icon -->
                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="ðŸ—£ï¸"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recognized Speech"
                            android:textColor="#1A237E"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <!-- Info symbol as text -->
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:text="â“˜"
                            android:textColor="#757575"
                            android:textSize="14sp"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Speech Text Display -->
                    <TextView
                        android:id="@+id/tvRecognizedText"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:text="Click 'Start Listening' and speak into your microphone.\n\nYour speech will appear here as text."
                        android:textColor="#424242"
                        android:textSize="16sp"
                        android:gravity="top"
                        android:lineSpacingMultiplier="1.2"
                        android:padding="20dp"
                        android:background="@drawable/rounded_border_light"
                        android:textIsSelectable="true"
                        android:scrollbars="vertical" />

                    <!-- Empty State -->
                    <TextView
                        android:id="@+id/tvEmptyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No speech detected yet"
                        android:textColor="#9E9E9E"
                        android:textSize="14sp"
                        android:layout_marginTop="16dp"
                        android:layout_gravity="center_horizontal"
                        android:visibility="visible" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sign Display Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <!-- Animation icon as text -->
                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="ðŸŽ¬"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sign Language Output"
                            android:textColor="#1A237E"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Animation Container -->
                    <FrameLayout
                        android:id="@+id/animationContainer"
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        android:background="@drawable/circle_gradient_light"
                        android:gravity="center"
                        android:layout_marginBottom="20dp"
                        android:elevation="4dp">

                        <!-- Sign Animation -->
                        <ImageView
                            android:id="@+id/ivSignAnimation"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:src="@drawable/sign_language_placeholder"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center"
                            android:contentDescription="Sign language animation" />

                        <!-- Current Word Display -->
                        <TextView
                            android:id="@+id/tvCurrentWord"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#1A237E"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:background="#80FFFFFF"
                            android:padding="8dp"
                            android:layout_gravity="bottom|center"
                            android:visibility="gone"
                            android:elevation="4dp" />

                        <!-- Progress indicator -->
                        <ProgressBar
                            android:id="@+id/pbLoading"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:visibility="gone" />
                    </FrameLayout>

                    <!-- Sign Description -->
                    <TextView
                        android:id="@+id/tvSignDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ready for speech input"
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="#F5F5F5"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Controls Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <!-- Controls icon as text -->
                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="ðŸŽ®"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Controls"
                            android:textColor="#1A237E"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Button Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="20dp">

                        <!-- Start Button -->
                        <Button
                            android:id="@+id/btnStart"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="Start Listening"
                            android:textSize="16sp"
                            android:background="@drawable/button_green_gradient"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:layout_marginEnd="12dp"
                            android:elevation="6dp"
                            android:stateListAnimator="@null"
                            android:paddingStart="24dp"
                            android:paddingEnd="24dp" />

                        <!-- Stop Button -->
                        <Button
                            android:id="@+id/btnStop"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="Stop"
                            android:textSize="16sp"
                            android:background="@drawable/button_red_gradient"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:layout_marginStart="12dp"
                            android:elevation="6dp"
                            android:stateListAnimator="@null"
                            android:paddingStart="24dp"
                            android:paddingEnd="24dp"
                            android:enabled="false" />
                    </LinearLayout>

                    <!-- Clear Button -->
                    <Button
                        android:id="@+id/btnClear"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:text="Clear Text"
                        android:textSize="15sp"
                        android:background="@drawable/button_orange_gradient"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:elevation="4dp"
                        android:stateListAnimator="@null"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp" />


                    <!-- Show Signs Button -->
                    <Button
                        android:id="@+id/btnShowSigns"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:text="Show Sign Animations"
                        android:textSize="15sp"
                        android:background="#9C27B0"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:elevation="4dp"
                        android:stateListAnimator="@null"
                        android:layout_marginTop="12dp"
                        android:enabled="false" />

                    <!-- Status Indicator -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="24dp"
                        android:padding="16dp"
                        android:background="#F8F9FA"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp">

                        <!-- Status Dot -->
                        <View
                            android:id="@+id/statusDot"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:background="@drawable/circle_gray"
                            android:layout_marginEnd="12dp" />

                        <!-- Status Text -->
                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ready - Tap Start to begin"
                            android:textColor="#757575"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Step 9: Speech-to-Text"
                            android:textColor="#1A237E"
                            android:textSize="12sp"
                            android:background="#E8EAF6"
                            android:padding="4dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>