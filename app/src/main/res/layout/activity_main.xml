<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/windowBackground"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/headerSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="20dp">

            <!-- App Logo -->
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/app_name"
                android:elevation="6dp"
                android:src="@drawable/echosignlogo" />

            <!-- App Title and User Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAppTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.02"
                    android:text="EchoSign"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvWelcomeUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Speech to Sign Language"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Logout Button -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="?attr/colorSecondary"
                android:elevation="2dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="Logout"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Main Content Area -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Your Preferences Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="@color/background_surface"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Your Preferences"
                            android:textColor="?android:attr/textColorPrimary"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvPrefSignMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sign Mode: ASL"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvPrefCaptions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Captions: Enabled"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvPrefUsage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Usage: Learning"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!-- Recognized Text Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="@color/background_white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Card Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <!-- Simple text icon -->
                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="12dp"
                                android:gravity="center"
                                android:text="ðŸ—£ï¸"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Recognized Speech"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <!-- Info symbol as text -->
                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:text="â“˜"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Speech Text Display -->
                        <TextView
                            android:id="@+id/tvRecognizedText"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:background="@color/background_light"
                            android:gravity="top"
                            android:lineSpacingMultiplier="1.2"
                            android:padding="20dp"
                            android:scrollbars="vertical"
                            android:text="Click 'Start Listening' and speak into your microphone.\n\nYour speech will appear here as text."
                            android:textColor="?android:attr/textColorPrimary"
                            android:textIsSelectable="true"
                            android:textSize="16sp" />

                        <!-- ASL Gloss Conversion Display -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:background="@color/background_surface"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <!-- English Text Display -->
                            <TextView
                                android:id="@+id/tvEnglishText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="14sp"
                                android:visibility="gone" />

                            <!-- ASL Gloss Display -->
                            <TextView
                                android:id="@+id/tvASLGlossText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text=""
                                android:textColor="?attr/colorPrimaryVariant"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:visibility="gone" />
                        </LinearLayout>

                        <!-- Empty State -->
                        <TextView
                            android:id="@+id/tvEmptyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="16dp"
                            android:text="No speech detected yet"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp"
                            android:visibility="visible" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Sign Display Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="@color/background_white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Card Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <!-- Animation icon as text -->
                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="12dp"
                                android:gravity="center"
                                android:text="ðŸŽ¬"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sign Language Output"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Animation Container -->
                        <FrameLayout
                            android:id="@+id/animationContainer"
                            android:layout_width="220dp"
                            android:layout_height="220dp"
                            android:layout_marginBottom="20dp"
                            android:background="@color/background_surface"
                            android:elevation="4dp"
                            android:gravity="center">

                            <!-- Sign Animation -->
                            <ImageView
                                android:id="@+id/ivSignAnimation"
                                android:layout_width="140dp"
                                android:layout_height="140dp"
                                android:layout_gravity="center"
                                android:contentDescription="Sign language animation"
                                android:scaleType="fitCenter"
                                android:src="@drawable/sign_language_placeholder" />

                            <!-- Current Word Display -->
                            <TextView
                                android:id="@+id/tvCurrentWord"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom|center"
                                android:background="#80FFFFFF"
                                android:elevation="4dp"
                                android:padding="8dp"
                                android:text=""
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                            <!-- Progress indicator -->
                            <ProgressBar
                                android:id="@+id/pbLoading"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:visibility="gone" />
                        </FrameLayout>

                        <!-- Sign Description -->
                        <TextView
                            android:id="@+id/tvSignDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@color/background_light"
                            android:gravity="center"
                            android:padding="12dp"
                            android:paddingStart="24dp"
                            android:paddingEnd="24dp"
                            android:text="Ready for speech input"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Controls Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/background_white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Card Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <!-- Controls icon as text -->
                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="12dp"
                                android:gravity="center"
                                android:text="ðŸŽ®"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Controls"
                                android:textColor="?android:attr/textColorPrimary"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Button Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <!-- Start Button -->
                            <Button
                                android:id="@+id/btnStart"
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:layout_marginEnd="12dp"
                                android:layout_weight="1"
                                android:background="?attr/colorPrimary"
                                android:elevation="6dp"
                                android:gravity="center"
                                android:paddingStart="24dp"
                                android:paddingEnd="24dp"
                                android:stateListAnimator="@null"
                                android:text="Start Listening"
                                android:textColor="?attr/colorOnPrimary"
                                android:textSize="16sp" />

                            <!-- Stop Button -->
                            <Button
                                android:id="@+id/btnStop"
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:layout_marginStart="12dp"
                                android:layout_weight="1"
                                android:background="?attr/colorPrimary"
                                android:elevation="6dp"
                                android:enabled="false"
                                android:gravity="center"
                                android:paddingStart="24dp"
                                android:paddingEnd="24dp"
                                android:stateListAnimator="@null"
                                android:text="Stop"
                                android:textColor="?attr/colorOnPrimary"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <!-- Clear Button -->
                        <Button
                            android:id="@+id/btnClear"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:background="?attr/colorSecondary"
                            android:elevation="4dp"
                            android:gravity="center"
                            android:paddingStart="24dp"
                            android:paddingEnd="24dp"
                            android:stateListAnimator="@null"
                            android:text="Clear Text"
                            android:textColor="?attr/colorOnSecondary"
                            android:textSize="15sp" />

                        <!-- Show Signs Button -->
                        <Button
                            android:id="@+id/btnShowSigns"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_marginTop="12dp"
                            android:background="?attr/colorPrimaryVariant"
                            android:elevation="4dp"
                            android:enabled="false"
                            android:gravity="center"
                            android:stateListAnimator="@null"
                            android:text="Show Sign Animations"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="15sp" />

                        <!-- Status Indicator -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:background="@color/background_surface"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp">

                            <!-- Status Dot -->
                            <View
                                android:id="@+id/statusDot"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/circle_gray" />

                            <!-- Status Text -->
                            <TextView
                                android:id="@+id/tvStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ready - Tap Start to begin"
                                android:textColor="?android:attr/textColorSecondary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <!-- Step 12 Indicator -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?attr/colorPrimary"
                                android:padding="4dp"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:text="Step 12: ASL Dictionary"
                                android:textColor="?attr/colorOnPrimary"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabChatbot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_chat"
        app:backgroundTint="?attr/colorSecondary"
        app:tint="@android:color/white"
        android:contentDescription="Open Chatbot"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>